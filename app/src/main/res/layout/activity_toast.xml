<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#5050"
        tools:context=".ToastAct">
    <TextView
            android:text="simple Toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8FD69B13"
            android:padding="4dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp" android:visibility="visible"/>
    <TextView
            android:text="custom Toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8FD69B13"
            android:padding="4dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:textSize="24sp" android:visibility="visible"/>
    <TextView
            android:text="posintion Toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8FD69B13"
            android:padding="4dp"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:textSize="24sp" android:visibility="visible"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/play_btn"
            android:id="@+id/Toast_Run1"
            app:layout_constraintTop_toTopOf="@+id/textView" app:layout_constraintEnd_toEndOf="@+id/textView"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="@+id/textView"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:visibility="visible"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/play_btn"
            android:id="@+id/Toast_Run2"
            app:layout_constraintEnd_toEndOf="@+id/textView2" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView2" app:layout_constraintBottom_toBottomOf="@+id/textView2"
            android:visibility="visible"/>


    <Button
            android:text="KT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Toast_KT1" app:layout_constraintEnd_toStartOf="@+id/Toast_Run1"
            android:layout_marginEnd="3dp"
            app:layout_constraintTop_toTopOf="@+id/textView" app:layout_constraintBottom_toBottomOf="@+id/textView"
            style="@android:style/Widget.Material.Light.Button.Small" android:visibility="visible"/>
    <Button
            android:text="KT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Toast_KT2"
            app:layout_constraintTop_toTopOf="@+id/textView2" app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/Toast_Run2" android:layout_marginEnd="3dp"
            style="@android:style/Widget.Material.Light.Button.Small" android:visibility="visible"/>
    <Button
            android:text="KT"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/Toast_KT3"
            app:layout_constraintTop_toTopOf="@+id/textView3" app:layout_constraintBottom_toBottomOf="@+id/textView3"
            style="@android:style/Widget.Material.Light.Button.Small" android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/BTN_custoum" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BTN_left"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:textAllCaps="false"
            style="@android:style/Widget.Material.Light.Button.Small"
            android:visibility="visible"/>
    <Button
            android:text="Top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:id="@+id/BTN_Top" app:layout_constraintStart_toEndOf="@+id/BTN_left"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            style="@android:style/Widget.Material.Light.Button.Small" android:visibility="visible"/>
    <Button
            android:text="Right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BTN_Right"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" style="@android:style/Widget.Material.Light.Button.Small"
            android:visibility="visible"/>
    <Button
            android:text="Down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:id="@+id/BTN_Down" app:layout_constraintEnd_toStartOf="@+id/BTN_Right"
            android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            style="@android:style/Widget.Material.Light.Button.Small" android:visibility="visible"/>
    <Button
            android:text="Top left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BTN_top_left"
            android:textAllCaps="false"
            style="@android:style/Widget.Material.Light.Button.Small"
            android:visibility="visible"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/BTN_left"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp" android:textSize="14sp"/>
    <Button
            android:text="Center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BTN_Center"
            android:textAllCaps="false"
            style="@android:style/Widget.Material.Light.Button.Small"
            app:layout_constraintStart_toEndOf="@+id/BTN_Top"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/BTN_Down"
            android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <Button
            android:text="Top Right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BTN_top_Right"
            android:textAllCaps="false"
            style="@android:style/Widget.Material.Light.Button.Small" android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/BTN_top_left"
            android:layout_marginStart="2dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/BTN_Top"/>
    <Button
            android:text="Bottom Left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BTN_Buttom_left"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:layout_marginEnd="2dp" app:layout_constraintEnd_toStartOf="@+id/BTN_Bottom_Right"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/BTN_Down"
            style="@android:style/Widget.Material.Light.Button.Small"/>
    <Button
            android:text="Bottom Right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:id="@+id/BTN_Bottom_Right" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            style="@android:style/Widget.Material.Light.Button.Small" android:textSize="14sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/BTN_Right"/>
    <Button
            android:text="Custum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:id="@+id/BTN_custoum"
            style="@android:style/Widget.Material.Light.Button.Small"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView3" app:layout_constraintBottom_toBottomOf="@+id/textView3"/>


    <ScrollView android:layout_width="match_parent" android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp" app:layout_constraintEnd_toEndOf="parent"
                android:background="#6050"
                android:layout_marginEnd="4dp" android:id="@+id/scrollView2"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/BTN_Buttom_left"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent">


        <TextView
                android:text="Click on KT to view sorce and much more usful info"
                android:layout_width="wrap_content"
                android:textIsSelectable="true"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="430dp"
                tools:layout_editor_absoluteX="156dp"
                android:id="@+id/Toast_TV_MAin" android:textSize="18sp"/>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

